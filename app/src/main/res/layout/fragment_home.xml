<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientberanda"
    android:orientation="vertical"
    tools:context="fragment.HomeFragment">


    <ImageView
        android:id="@+id/atas"
        android:layout_width="390dp"
        android:layout_height="95dp"
        android:background="@drawable/atas1"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="@+id/berat"
        app:layout_constraintStart_toStartOf="@+id/berat"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="218dp"
        android:layout_height="97dp"
        android:background="@drawable/shapeback"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="@+id/atas"
        app:layout_constraintTop_toTopOf="@+id/atas" />

    <ImageView
        android:id="@+id/lingkansapi"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/circle"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="@+id/atas"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/lingkaranawal"
        android:layout_width="69dp"
        android:layout_height="72dp"
        android:background="@drawable/sapinya"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/lingkansapi"
        app:layout_constraintEnd_toEndOf="@+id/lingkansapi"
        app:layout_constraintStart_toStartOf="@+id/lingkansapi"
        app:layout_constraintTop_toTopOf="@+id/lingkansapi" />

    <ImageView
        android:id="@+id/berat"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_marginBottom="38dp"
        android:background="@drawable/shape_berat"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/rumput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/rumput"
        android:layout_width="229dp"
        android:layout_height="150dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/sapi_transparant"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/berat"
        app:layout_constraintStart_toStartOf="@+id/berat" />

    <TextView
        android:id="@+id/nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/poppins_light"
        android:text="Holla, C-mon!"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/back"
        app:layout_constraintTop_toTopOf="@+id/back" />

    <TextView
        android:id="@+id/kalender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_light"
        android:text="kalender"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/nama"
        app:layout_constraintStart_toStartOf="@+id/nama"
        app:layout_constraintTop_toBottomOf="@+id/nama" />

    <TextView
        android:id="@+id/beranda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_light"
        android:text="Home"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/atas"
        app:layout_constraintEnd_toStartOf="@+id/back"
        app:layout_constraintStart_toStartOf="@+id/atas"
        app:layout_constraintTop_toTopOf="@+id/atas" />

    <TextView
        android:id="@+id/teks1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Prediksi Bobot Sapi"
        android:textColor="@color/white"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/berat"
        app:layout_constraintStart_toStartOf="@+id/atas"
        app:layout_constraintTop_toBottomOf="@+id/atas" />


    <TextView
        android:id="@+id/teks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Pilih Kategori Perhitungan Bobot Sapi"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@+id/berat"
        app:layout_constraintStart_toStartOf="@+id/berat"
        app:layout_constraintTop_toTopOf="@+id/berat" />

    <Button
        android:id="@+id/otomatis"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_klik"
        android:fontFamily="@font/poppins_regular"
        android:text="Otomatis\n(Online)"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/berat"
        app:layout_constraintTop_toBottomOf="@+id/teks" />

    <Button
        android:id="@+id/manual"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/shape_klik_lagi"
        android:fontFamily="@font/poppins_regular"
        android:text="Manual\n(Offline)"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/berat"
        app:layout_constraintTop_toBottomOf="@+id/teks" />


</androidx.constraintlayout.widget.ConstraintLayout>