<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientberanda"
    android:orientation="vertical"
    tools:context=".About">

    <ImageView
        android:id="@+id/atas_pengaturan"
        android:layout_width="395dp"
        android:layout_height="175dp"
        android:background="@drawable/atas"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/beranda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_light"
        android:text="About"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/atas_pengaturan"
        app:layout_constraintStart_toStartOf="@+id/atas_pengaturan"
        app:layout_constraintTop_toTopOf="@+id/atas_pengaturan" />

    <ImageView
        android:id="@+id/ab"
        android:layout_width="350dp"
        android:layout_height="489dp"
        android:background="@drawable/shape_about"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/beranda" />

    <TextView
        android:id="@+id/no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/poppins_light"
        android:text="Alat Penghitung Parameter Sapi Tanpa Kontak\nFisik"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/ab"
        app:layout_constraintTop_toTopOf="@+id/ab" />

    <TextView
        android:id="@+id/subjudul1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Dibangun Menggunakan :"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/no"
        app:layout_constraintTop_toBottomOf="@+id/no" />

    <TextView
        android:id="@+id/subjudul2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Package :"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/bagian1"
        app:layout_constraintTop_toBottomOf="@+id/bagian1" />

    <TextView
        android:id="@+id/subjudul3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Design UI :"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/bagian2"
        app:layout_constraintTop_toBottomOf="@+id/bagian2" />

    <TextView
        android:id="@+id/bagian1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/poppins_regular"
        android:text="-Windows 11\n-Android Studio\n-Kotlin\n-SDK\n-Firebase\n-Visual Studio Code\n-Python\n-FastAPI"
        android:textColor="@color/black"
        android:textSize="11sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@+id/subjudul1"
        app:layout_constraintTop_toBottomOf="@+id/subjudul1" />

    <TextView
        android:id="@+id/bagian2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/poppins_regular"
        android:text="-camera\n-get\n-image_cropper\n-image_picker\n-gallery\n-intl\n-material_design_icons_fluter\n-server"
        android:textColor="@color/black"
        android:textSize="11sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@+id/subjudul2"
        app:layout_constraintTop_toBottomOf="@+id/subjudul2" />

    <TextView
        android:id="@+id/bagian3"
        android:layout_width="300dp"
        android:layout_height="37dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/poppins_regular"
        android:text="UI design by Figma\nwww.figma.com"
        android:textColor="@color/black"
        android:textSize="11sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@+id/subjudul3"
        app:layout_constraintTop_toBottomOf="@+id/subjudul3" />


</androidx.constraintlayout.widget.ConstraintLayout>